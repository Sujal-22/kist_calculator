<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background ="#F3E5F5"
    tools:context=".MainActivity">

    <!-- Title -->
    <TextView
        android:id="@+id/title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="KIST CALCULATOR"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#800080"
        android:gravity="center"
        android:background="#FFFF00"
        android:padding="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- कुल महीने -->
    <EditText
        android:id="@+id/editTotalMonths"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="कुल महीने :"
        android:inputType="number"
        android:textColorHint="#FF0000"
        app:layout_constraintTop_toBottomOf="@id/title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <!-- लॉटरी रुपये -->
    <EditText
        android:id="@+id/editLotteryRupees"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="लॉटरी रुपये:"
        android:inputType="number"
        android:textColorHint="#FF0000"
        app:layout_constraintTop_toBottomOf="@id/editTotalMonths"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp" />

    <!-- बचे महीने -->
    <EditText
        android:id="@+id/editRemainingMonths"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="बचे महीने :"
        android:inputType="number"
        android:textColorHint="#FF0000"
        app:layout_constraintTop_toBottomOf="@id/editLotteryRupees"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp" />

    <!-- गारंटी -->
    <TextView
        android:id="@+id/textGuarantee"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Gurantee: ₹0.00"
        android:inputType="number"
        android:textColor="#000000"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/editRemainingMonths"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="13dp" />

    <!-- RoundOFF -->
    <TextView
        android:id="@+id/textRoundOff"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="RoundOFF: ₹0.00"
        android:textColor="#000000"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/textGuarantee"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="4dp" />

    <!-- बोली छूट -->
    <EditText
        android:id="@+id/editDiscount"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="बोली छूट :"
        android:inputType="numberDecimal"
        android:textColorHint="#FF0000"
        app:layout_constraintTop_toBottomOf="@id/textRoundOff"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp" />

    <!-- किस्त -->
    <TextView
        android:id="@+id/textEMI"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="किस्त: ₹0.00"
        android:textColor="#800080"
        android:textSize="18sp"
        android:textStyle="bold"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/editDiscount"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
