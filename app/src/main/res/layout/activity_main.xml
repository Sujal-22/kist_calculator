<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F3E5F5"
    android:padding="20dp">

    <!-- Title -->
    <TextView
        android:id="@+id/title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="KIST CALCULATOR"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="#ffffff"
        android:gravity="center"
        android:background="#4a148c"
        android:padding="12dp"
        android:letterSpacing="0.05"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <!-- कुल महीने -->
    <EditText
        android:id="@+id/editTotalMonths"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="16dp"
        android:background="@android:drawable/edit_text"
        android:hint="कुल महीने"
        android:textSize="16sp"
        android:inputType="number"
        android:textColor="#000000"
        android:textColorHint="#6a1b9a"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title" />


    <!-- लॉटरी रुपये -->
    <EditText
        android:id="@+id/editLotteryRupees"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="लॉटरी रुपये"
        android:inputType="number"
        android:background="@android:drawable/edit_text"
        android:textColor="#000000"
        android:textColorHint="#6a1b9a"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/editTotalMonths"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="5dp"
    />

    <!-- बचे महीने -->
    <EditText
        android:id="@+id/editRemainingMonths"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="बचे महीने"
        android:inputType="number"
        android:background="@android:drawable/edit_text"
        android:textColor="#000000"
        android:textColorHint="#6a1b9a"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/editLotteryRupees"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="5dp"
        />

    <!-- गारंटी -->
    <TextView
        android:id="@+id/textGuarantee"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Guarantee: ₹0.00"
        android:textColor="#c62828"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/editRemainingMonths"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="12dp"
        android:layout_marginStart="10dp"
        />

    <!-- RoundOFF -->
    <TextView
        android:id="@+id/textRoundOff"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Roundoff: ₹0.00"
        android:textColor="#c62828"
        android:textStyle="bold"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/textGuarantee"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="10dp"
        />

    <!-- बोली छूट -->
    <EditText
        android:id="@+id/editDiscount"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="बोली छूट"
        android:inputType="numberDecimal"
        android:background="@android:drawable/edit_text"
        android:textColor="#000000"
        android:textColorHint="#6a1b9a"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/textRoundOff"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="5dp"
        />

    <!-- किस्त -->
    <TextView
        android:id="@+id/textEMI"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="किस्त: ₹0.00"
        android:textColor="#c62828"
        android:textSize="18sp"
        android:textStyle="bold"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/editDiscount"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>